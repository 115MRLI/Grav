<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                tools:context="com.github.glomadrian.gravball.MainActivity">

  <com.github.glomadrian.grav.GravView
      android:id="@+id/grav"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      app:colorGenerator="com.github.glomadrian.grav.generator.paint.ArrayColorGenerator"
      app:grav_colors="@array/Spectral"
      app:pointGenerator="com.github.glomadrian.grav.generator.point.RegularPointGenerator"
      app:cell_size="100"
      app:variance="200"
      app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGravGenerator"
      app:size="3dp"
      app:animationGenerators="@array/Animations"
      app:min_animation_time="1000"
      app:max_animation_time="2800"
      app:animation_variance="10dp"
      app:grav_ball_size_anim_from_size="5dp"
      app:grav_ball_size_anim_to_size="10dp"
      app:shake_direction="horizontal"
      />

</RelativeLayout>
