<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                tools:context="com.github.glomadrian.gravball.MainActivity">

  <com.github.glomadrian.grav.GravView
      android:id="@+id/grav"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerInParent="true"
      app:colorGenerator="com.github.glomadrian.grav.generator.paint.OneColorGenerator"
      app:grav_color="#1cffffff"
      app:pointGenerator="com.github.glomadrian.grav.generator.point.RegularPointGenerator"
      app:cell_size="400"
      app:variance="100"
      app:gravGenerator="com.github.glomadrian.grav.generator.grav.BallGravGenerator"
      app:size="30dp"
      app:animationGenerator="com.github.glomadrian.grav.generator.animation.VerticalMoveAnimator"
      app:animation_variance="100dp"
      app:min_animation_time="3000"
      app:max_animation_time="8000"

      />

</RelativeLayout>
